
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to user_path(@book.user) do %>
							<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
							<%= @book.user.name %>
						<% end %>
					</td>
					<td>
						<%= link_to book_path(@book) do %>
							<%= @book.title %>
						<% end %>
					</td>
					<td><%= @book.body %></td>
					<td>
						<%= render 'favorites/favorite', book: @book %>
					</td>
					<td>
						<% if @book.user == current_user %>
							<%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %>
						<% end %>
					</td>
					<td>
						<% if @book.user == current_user %>
							<%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %>
						<% end %>
					</td>
				</tr>
			</table>

		<!-- コメント表示 -->
		<% @book.book_comments.each do |book_comment| %>
				<%= link_to user_path(@user) do %>
					<%= book_comment.user.name %>
				<% end %>
			<%= book_comment.created_at.strftime('%Y/%m/%d') %>
			<%= book_comment.comment %>
			<!-- コメント削除ボタン -->
			<%= link_to "DELETE", book_book_comments_path(book_id: @book, id: book_comment.id), method: :delete %>
			<!-- コメント削除ボタン -->
   		<% end %>

		<!-- コメント表示終了 -->


		<!-- コメント入力フォーム -->
		<%= form_for [@book, @book_comment] do |f| %>
		<div class="comment_form">
            <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
    	</div>
    	<div class="action">
    	<%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
		</div>
		<% end %>
		<!-- コメント入力フォーム終了 -->

	</div>
</div>

