<h1>Follower Users</h1>
<div class="row">
	<table class="table table-hover table-invers">
		<thead>
			<tr>
				<th>image</th>
				<th>name</th>
				<th>フォロー数</th>
				<th>フォロワー数</th>
				<th>フォローボタン</th>
				<th>show</th>
			</tr>
		</thead>

		<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
			<td><%= user.name%></td>
			<td></td>
			<td></td>
			<td>
				<% if current_user != book.user %>
					<% if book.user.followed_by?(current_user) %>
						<p><%= link_to "フォロー外す", user_relationships_path(book.user.id), method: :delete %></p>
					<% else %>
						<p><%= link_to "フォローする", user_relationships_path(book.user.id), method: :post %></p>
					<% end %>
				<% end %>
			</td>
			<td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
		</tr>
		</tbody>
	</table>
</div>